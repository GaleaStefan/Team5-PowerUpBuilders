@model ProjectsViewModel
    <div>
        <div class="row">
            <div class="col">
                <header style="text-align: center;">
                    <h1 style="margin-top: 17px;">Current Projects</h1>
                </header>
            </div>
        </div>
        <div class="row" style="height: 451px;width: 80%;margin-left: 10%;margin-right: 10%;margin-top: 74px;margin-bottom:100px">
            <div class="col col-md-8">
                <div style="overflow-y: scroll;height: 483px;">
                    @foreach (var project in Model.Projects)
                    {
                        <div class="d-inline-block float-start" style="height: 150px;border-style: solid;width: 180px;margin-top: 9px;margin-left: 15px;">
                            <div style="border-style: solid;border-color: var(--bs-indigo);height: 80%;">
                                @*<img class="d-inline" style="width: 100%;height: 100%;">*@
                            <button class="btn btn-primary" type="button" asp-controller="ProjectsController" asp-action="DeleteProject" asp-route-id="@project.Id" runat="server">Delete</button>
                        </div>
                        <div style="border-style: solid;border-color: var(--bs-red);height: 20%;">
                            <h5 class="text-center">@project.Name</h5>
                        </div>
                    </div>
                }
                </div>
            </div>
            <div class="col col-md-4">
                <div class="text-center" style="text-align: center; margin-bottom:100px">
                    <div class="btn-group-vertical" role="group" style="margin-top: 13px;width: 100%;height: 50%;padding: 2px;"><button class="btn btn-primary" type="button" style="margin-bottom: 15px;">Add new</button><button class="btn btn-primary" type="button" style="margin-bottom: 15px;">View all tasks</button><button class="btn btn-primary" type="button">View all employees</button></div>
                    <div class="btn-group-vertical" role="group" style="margin-top: 41px;width: 100%;height: 50%;padding: 2px;"><button class="btn btn-primary" type="button" style="margin-bottom: 15px;">View</button><button class="btn btn-primary" type="button" style="margin-bottom: 15px;">Edit</button><button class="btn btn-primary" type="button">Delete</button></div>
                </div>
            </div>
        </div>
        <script src="assets/bootstrap/js/bootstrap.min.js"></script>
        <div class="text-center">

        </div>
 </div>