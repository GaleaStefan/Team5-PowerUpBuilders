@model Project

<div style="margin-top:60px">
    <div class="card" style="width:36%; margin:auto;">
        <div class="card-header">
            <h3>Are you sure you want to delete this project?</h3>
        </div>
        <hr />
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">

                </div>
                <div class="col-md-10">
                </div>

            </div>

            <dl class="dl-horizontal">
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
            @using (Html.BeginForm("ConfirmDelete", "Projects", new { id = Model.Id }, FormMethod.Post))
            {
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />

            @Html.ActionLink("Back to List", "Index")
            <button class="btn" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i> Close</button>
        </div>
            }
        </div>
    </div>
</div>